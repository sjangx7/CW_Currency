<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Neutral base; will be overridden at runtime via setTint(...) -->
    <solid android:color="#DDDDDD" />
    <corners android:radius="12dp" />
    <!-- Optional: small internal padding so the rounded pill looks good
         (you already have padding on the TextView, so keep this small or remove) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
